<div class="criar-form-container">
    <a href="/products/dashboard">Voltar</a>
    <h1>Faça sua requisição:</h1>
    <form action="/products/criar" method="POST">
        <input type="hidden" name="reqst" value="1">
        <div class="form-control">
            <label for="pname">Produto desejado:</label>
            <input type="text" name="pname" placeholder="Digite aqui...">
        </div>
        <div class="form-control">
            <label for="pqty">Quantidade (coloque a unidade):</label>
            <input type="text" name="pqty" placeholder="Digite aqui...">
        </div>
        <div class="form-control">
            <label for="data">Qual a data de disponibilidade?</label>
            <input type="text" name="data" placeholder="Digite aqui...">
        </div>
        <input class="submit" type="submit" value="Criar Requisição">
    </form>
</div>